<div class="row p-2">
		<div class="col-md-6 text-center">
			<img class="img-responsive center-block" src="{{user.image}}" style="width: 250px;margin-bottom: 25px;">
		</div>
		<div class="col-md-6">
			<h3>{{user.name}}</h3>
			<p>{{user.email}}</p>
			<p class="">{{userCommentsRest.length}}個已評論的餐廳</p>
			<p class="">{{user.FavoritedRestaurants.length}}個收藏的餐廳</p>
			<p class="">{{user.Followings.length}}followings(追蹤者)</p>
			<p class="">{{user.Followers.length}}followers(追隨者)</p>
			<a href="/users/{{user.id}}/edit"><button class="btn btn-outline-success my-2 my-sm-0">Edit</button></a>
		</div>
</div>

<blockquote class="blockquote p-5">
	<div class="row">
		{{#if userCommentsRest}}
		<div class='col-6'>
			<p class="">{{userCommentsRest.length}}個已評論的餐廳</p>
			{{#each userCommentsRest }}
			<a href="/restaurants/{{this.Restaurant.id}}"><img class="img-responsive center-block mr-3"
					src="{{this.Restaurant.image}}" style="width:70px;margin-bottom: 25px;"></a>
			{{/each}}
			{{/if}}
		</div>

		<div class="col-6">
			{{#if user.FavoritedRestaurants}}
			<p class="">{{user.FavoritedRestaurants.length}}個收藏的餐廳</p>
			{{#each user.FavoritedRestaurants }}
			<a href="/restaurants/{{this.id}}"><img class="img-responsive center-block mr-3" src="{{this.image}}"
					style="width:70px;margin-bottom: 25px;"></a>
			{{/each}}
			{{/if}}
		</div>

	</div>

	<div class="row">
		<div class="col-6">
			{{#if user.Followings}}
			<p class=""><span>{{user.Followings.length}}</span> followings(追蹤者)</p>
			{{#each user.Followings}}
			<a href="/users/top/{{this.id}}"><img class="img-responsive center-block mr-3" src="{{this.image}}" style="width:70px;margin-bottom: 25px;"></a>
			{{/each}}
			{{/if}}
		</div>
		<div class="col-6">
			{{#if user.Followers}}
			<p class="">{{user.Followers.length}} followers(追隨者)</p>
			{{#each user.Followers}}
			<a href="/users/top/{{this.id}}"><img class="img-responsive center-block mr-3" src="{{this.image}}"
					style="width:70px;margin-bottom: 25px;"></a>
			{{/each}}
			{{/if}}
		</div>


	</div>
</blockquote>


<hr />




