<form action="/users/{{user.id}}?_method=PUT" method="POST">
	<div class="row p-5">
		<div class="col-md-5 text-center">
			<img class="img-responsive center-block" src="{{user.image}}" style="width: 250px;margin-bottom: 25px;">
		</div>
		<div class="col-md-4 text-left ">
			<div class="row mb-3 ">
				<label for="text">Name:</label>
				<input class="ml-4 row col-8" type="text" placeholder="{{user.name}}" name="name" value="{{user.name}}">
			</div>
			</br>
			<div class="row mb-3 w-auto">
				<label for="text">Email:</label>
				<input class="ml-4 row col-8" type="text" placeholder="{{user.email}}" name="email" value="{{user.email}}">
			</div>
			</br>
			<div class="row">
				<label for="img">Photo:</label>
				<input class="ml-4 row col-8" type="text" placeholder="change photo" name="image" value="{{user.image}}">
			</div>
			<div class="text-right">
				<button type="submit"class="btn btn-outline-success my-5">Submit</button>
			</div>
		</div>

	</div>
</form>
