<div class="row p-2">
	<div class="col-md-6 text-center">
		<img class="img-responsive center-block" src="{{inUser.image}}" style="width: 250px;margin-bottom: 25px;">
	</div>
	<div class="col-md-6">
		<h3>{{inUser.name}}</h3>
		<p>{{inUser.email}}</p>
		<p class="">{{inUser.Comments.Restaurant.length}}個已評論的餐廳</p>
		<p class="">{{inUser.FavoritedRestaurants.length}}個收藏的餐廳</p>
		<p class="">{{inUser.Followings.length}}followings(追蹤者)</p>
		<p class="">{{inUser.Followers.length}}followers(追隨者)</p>
		{{#ifCond user.id inUser.id}}
		<a href="/users/{{inUser.id}}/edit"><button class="btn btn-outline-success my-2 my-sm-0">Edit</button></a>
		{{/ifCond}}
	</div>
</div>

<blockquote class="blockquote p-5">
	<div class="row">
		{{#if inUser.Comments}}
		<div class='col-6'>
			<p class="">{{inUser.Comments.length}}個已評論的餐廳</p>
			{{#each inUser.Comments }}
			<a href="/restaurants/{{this.Restaurant.id}}"><img class="img-responsive center-block mr-3"
					src="{{this.Restaurant.image}}" style="width:70px;margin-bottom: 25px;"></a>
			{{/each}}
			{{/if}}
		</div>

		<div class="col-6">
			{{#if inUser.FavoritedRestaurants}}
			<p class="">{{inUser.FavoritedRestaurants.length}}個收藏的餐廳</p>
			{{#each inUser.FavoritedRestaurants }}
			<a href="/restaurants/{{this.id}}"><img class="img-responsive center-block mr-3" src="{{this.image}}"
					style="width:70px;margin-bottom: 25px;"></a>
			{{/each}}
			{{/if}}
		</div>

	</div>

	<div class="row">
		<div class="col-6">
			{{#if inUser.Followings}}
			<p class=""><span>{{inUser.Followings.length}}</span> followings(追蹤者)</p>
			{{#each inUser.Followings}}
			<a href="/users/top/{{this.id}}"><img class="img-responsive center-block mr-3" src="{{this.image}}"
					style="width:70px;margin-bottom: 25px;"></a>
			{{/each}}
			{{/if}}
		</div>
		<div class="col-6">
			{{#if inUser.Followers}}
			<p class="">{{inUser.Followers.length}} followers(追隨者)</p>
			{{#each inUser.Followers}}
			<a href="/users/top/{{this.id}}"><img class="img-responsive center-block mr-3" src="{{this.image}}"
					style="width:70px;margin-bottom: 25px;"></a>
			{{/each}}
			{{/if}}
		</div>


	</div>
</blockquote>


<hr />
